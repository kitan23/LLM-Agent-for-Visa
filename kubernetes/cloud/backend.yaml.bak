apiVersion: v1
kind: Service
metadata:
  name: backend
  namespace: opt-rag
  labels:
    app: opt-rag
    component: backend
spec:
  ports:
  - port: 8000
    targetPort: 8000
    protocol: TCP
    name: http
  selector:
    app: opt-rag
    component: backend
  type: LoadBalancer
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: backend
  namespace: opt-rag
  labels:
    app: opt-rag
    component: backend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: opt-rag
      component: backend
  template:
    metadata:
      labels:
        app: opt-rag
        component: backend
    spec:
      containers:
      - name: backend
        image: gcr.io/visa-llm-assistant/opt-rag-backend:v1
        imagePullPolicy: Always
        ports:
        - containerPort: 8000
        resources:
          requests:
            cpu: "250m"
            memory: "1.5Gi"
          limits:
            cpu: "1"
            memory: "3Gi"
        env:
        - name: MODEL_PATH
          value: "/app/models/qwen2.5-1.5b"
        - name: MODEL_ID
          value: "Qwen/Qwen2.5-1.5B-Chat"
        - name: VECTOR_STORE_PATH
          value: "/app/vector_store"
        - name: DEVICE
          value: "cpu"
        - name: OTLP_ENDPOINT
          value: "http://jaeger:4317"
        volumeMounts:
        - name: models-volume
          mountPath: /app/models
        - name: vector-store-volume
          mountPath: /app/vector_store
      volumes:
      - name: models-volume
        hostPath:
          path: /opt/models
          type: DirectoryOrCreate
      - name: vector-store-volume
        persistentVolumeClaim:
          claimName: vector-store-pvc
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: vector-store-pvc
  namespace: opt-rag
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  storageClassName: standard 